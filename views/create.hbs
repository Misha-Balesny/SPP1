
<form action="/create" method="POST" enctype="multipart/form-data">
    <h2>Add New Task</h2>
   
    <div class="input-field">
        <input type="text" name="title" required placeholder="Task" >
    </div>
    <div class="input-field">
        <textarea type="text" name="message"  required placeholder="Description"
        style="resize:vertical;
        min-height:150px"
        ></textarea>
    </div>
    <p>
        <label>
            <input name="status_order" id="assigned" type="radio"  value="Assigned" checked />
        <span>Assigned</span>
        </label>
    </p>
    <p>
        <label>
            <input name="status_order" id="done" type="radio" value="Done" />
        <span>Done</span>
        </label>
    </p>
    <div>
        <input type="date" class="datepicker" max="2022-01-09"  name="date" required >
    </div>
    <div style="margin-top: 15px;">
        <label>
            <input id="my-file-selector" type="file"   name="filedata">
        
        </label>
    </div>
    
    <button type="submit" class="btn" style="margin-top:20px;">Add</button>
</form>